<div style="background-color: rgb(185, 3, 3); height:100vh;overflow-x: hidden;">
    <div class="row">
        <div class="text-center">
            <%- include ("./partials/messages") %>
        </div>
        <div class="col-sm-5 m-auto">
            <div style="margin-top: 100px;" class="card">
                <div style="background-color: #02256b;" class="card-header text-light text-center">
                    <h3><i class="bi bi-gear-fill"></i> Change Passcode </h3>
                </div>
                <div class="card-body">
                    <form action="/dashboard/admin/changePasscode" method="POST">
                        <div class="mb-3">
                            <input type="hidden" name="id" value="<%= admin._id %>">
                            <label for="email">New Passcode</label>
                            <input type="number" name="passcode" class="form-control"  placeholder="Change Your Passcode">
                        </div>
                        <div class="mb-3">
                            <input type="submit" class="btn btn-outline-primary" value="Change">
                        </div>
                    </form>
                </div>
            </div>
            <a class="btn btn-dark mt-3" style="text-decoration: none;"  href="/dashboard/admin"><i class="bi bi-arrow-left"></i> Back</a>
        </div>
    </div>
</div>