function validate(){
var password = document.getElementById('password').value
var Cpassword = document.getElementById('Cpassword').value
if(password.length < 8){
  document.getElementById('validatePass').innerHTML = '<p style="color:red;">passwords must have atleast 8 characters</p>'
}else if(!password.match(/[A-Z]/)){
  document.getElementById('validatePass').innerHTML = '<p style="color:red;">passwords must have atleast an Uppercase</p>'
}else if(!password.match(/[a-z]/)){
  document.getElementById('validatePass').innerHTML = '<p style="color:red;">passwords must have atleast a Lowercase</p>'
}else if (!password.match(/[ `!@#$%^&*()_+\-=\[\]{};':"\\|,.<>\/?~]/)){
  document.getElementById('validatePass').innerHTML = '<p style="color:red;">passwords must have atleast a special Character</p>'
}else if(!password.match(/\d/)){
  document.getElementById('validatePass').innerHTML = '<p style="color:red;">passwords must have atleast a number </p>'
}else{
  document.getElementById('validatePass').innerHTML = '<p style="color:green;"> Valid <i class="bi bi-check h2 text-success"></i></p>'
}
if(password != Cpassword){
  document.getElementById('CvalidatePass').innerHTML = '<p style="color:red;">passwords do not match <i class="bi bi-x h2 text-danger"></i></p>'
}else{
  document.getElementById('CvalidatePass').innerHTML = '<p style="color:green;"> Valid <i class="bi bi-check h2 text-success"></i></p>'
}
}
