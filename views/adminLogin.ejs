<div style="background-color: rgb(185, 3, 3); height:100vh;overflow-x: hidden;">
    <div class="row container">
        <div class="text-center">
            <%- include ("./partials/messages") %>
        </div>
        <div class="col-md-6 m-auto">
            <div style="margin-top: 100px;" class="card">
                <div style="background-color: #02256b;" class="card-header text-light text-center">
                    <h3><i class="bi bi-gear-fill"></i> Admin Credentials </h3>
                </div>
                <div class="card-body">
                    <form action="/auth/admin" method="POST">
                        <div class="mb-3">
                            <label for="email">Organisation Email</label>
                            <input type="email" name="email" class="form-control"  placeholder="Your Organisation Email">
                        </div>
                        <div class="mb-3">
                            <label for="passcode">Passcode</label>
                            <input type="password" name="passcode" class="form-control" placeholder="Your Organisation Passcode">
                        </div>
                        <div class="mb-3">
                            <input type="submit" class="btn btn-outline-primary" value="Submit">
                        </div>
                    </form>
                </div>
            </div>
            <a class="btn btn-dark mt-3" style="text-decoration: none;"  href="/"><i class="bi bi-arrow-left"></i> Back</a>
        </div>
    </div>
</div>