<section class="container">
    <div class="text-center">
        <%- include ("./partials/messages") %>
    </div>
    <div class="row">
        <div class="col-md-6 g-4">
            <div class="row">
                <div class="col-md-6 m-auto">
                    <form action="/dashboard/search" method="POST">
                        <div style="display: flex;">
                            <input type="text" name="search" placeholder="Search For A Product" class="form-control">
                            <input type="submit" value="Search" class="btn btn-danger ">
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6 g-4">
            <div class="row">
                <div class="col-md-7 m-auto">
                    <div style="display: flex; justify-content: space-between;">
                        <a href="/dashboard/new_product" class="btn btn-danger">Add New Product</a>
                        <a href="/dashboard/admin" class="btn btn-dark">Dashboard</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="container mt-3">
    <div class="row">
        <div class="col-md-10 m-auto">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center" style="color: rgb(185, 3, 3);">All Products</h3>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead class="table-danger">
                            <tr>
                                <th>Product Name</th>
                                <th>Category</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(products.length > 0) { %>
                                <% for(let product of products) { %>
                                    <tr>
                                        <td><%= product.name %></td>
                                        <td><%= product.category %></td>
                                        <td><%= product.description %></td>
                                        <td><%= product.price %></td>
                                        <td>
                                            <a href="/dashboard/product_image/<%= product._id %>" class="btn btn-info g-2">Add Image</a>
                                            <a href="/dashboard/update_product/<%= product._id %>" class="btn btn-warning g-2"><i class="bi bi-pen"></i></a>
                                            <a href="/dashboard/delete_product/<%= product._id %>" class="btn btn-danger g-2"><i class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                <% } %>
                            <% } else{%>
                                <tr>
                                    <td colspan="4" class="text-center"><h4>No Products Found</h4></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
