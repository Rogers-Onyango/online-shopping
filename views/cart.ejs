<section class="py-3 mt-5 container">
    <div class="row">
        <div class="col-md-8 g-4">
            <% if (cart.products.length == 0){ %>
                <h2 class="text-center">No Item In Shopping Cart</h2>
            <%} else{%>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Product Image</th>
                            <th style="width: 200px;">Description</th>
                            <th>Price</th>
                            <th>Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < cart.products.length; i++){let product = cart.products[i]%>
                        <% for(file of files) { %>
                            <% if (product._id == file.metadata){%>
                                <tr>
                                    <th scope="row"><%= i+1 %></th>
                                    <td>
                                        <b class="text-center"><i><%= product.name %></i></b><br>
                                        <img src="http://localhost:8000/image/<%= file.filename %>"  alt="" style="width:100px; height: 70px; border-radius:10px;">
                                    </td>
                                    <td style="font-size: 13px; font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;"><%= product.description %></td>
                                    <td><%= product.price %> Ksh</td>
                                    <td><b><%= product.qty %></b></td>
                                </tr>
                            <%}%>
                        <%}%>
                        <%}%>
                        <tr>
                            <td style="font-size: 23px; font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;" colspan="3">
                                <b>Total Price</b>
                            </td>
                            <td style="font-size: 23px; font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;" class="text-dark m-auto" colspan="3"><%= cart.totalPrice %> Ksh</td>
                        </tr>
                    </tbody>
                </table>

        </div>
        <div class="col-md-4 g-4">
            <h2 class="text-center mb-5">Make Your Order</h2>
            <div class="card">
                <div class="card-header">
                    <h4 style="color: rgb(5, 92, 5); font-weight: 700;" class="text-center">LIPA NA M-PESA</p>
                </div>
                <div class="card-body">
                    <p style="font-weight: 600;">Amount : <%= cart.totalPrice %> Ksh </p>
                    <p>M-pesa Number: <%= user.mobile %></p>
                    <div class="dropdown">
                        <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        Change Number?
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <form action="" class="dropdown-item">
                            <input type="number" placeholder="Input Number" class="form-control">
                            <input type="submit" value="Change" class="btn btn-primary mt-3">
                        </form>
                        </ul>
                    </div>
                    <a href="#" class="btn btn-outline-success mt-3">Order</a>
                </div>
            </div>
            <div class="card g-4 mt-4">
                <div class="card-header">
                    <h4 style="color: orangered; font-weight: 700;" class="text-center">Mastercard</p>
                </div>
                <div class="card-body">
                    <p style="font-weight: 600;">Amount : <%= cart.totalPrice %> Ksh </p>
                    <form action="">
                        <div class="row mb-3">
                            <div class="col-6">
                                <label for="fname">First Name <span style="font-size: 9px; font-weight:100;">must match card</span></label>
                                <input type="text" name="fname" class="form-control">
                            </div>
                            <div class="col-6">
                                <label for="lname">Last Name <span style="font-size: 9px; font-weight:100;">must match card</span></label>
                                <input type="text" name="lname" class="form-control">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="card">Card Number</label>
                            <input type="number" class="form-control">
                        </div>
                        <input type="submit" value="Order" class="btn btn-outline-info">
                    </form>
                </div>
            </div>
        </div>
        <%}%>
    </div>
</section>
