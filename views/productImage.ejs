<div class="container">
    <div class="row">
        <div class="col-md-5 m-auto">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center  my-2"><b><i>Product Image</i></b></h1>
                </div>
                <div class="card-body">
                    <div>
                        <p><i>Product Name:</i> <b> <%=product.name%></b></p>
                        <p><i>Product Category:</i> <b> <%=product.category%></b></p>
                    </div>
                    <div>
                        <% if(files.length <= 0){ %>
                            <form action="/dashboard/product_image/<%= product._id %>" method="POST" enctype="multipart/form-data">
                                <div class="custom-file mb-3">
                                    <input type="file" name="file" id="file" class="custom-file-input">
                                </div>
                                <input type="submit" value="Upload Image" class="btn btn-primary btn-block">
                            </form>
                        <% } else {%>
                            <p class="text-center"><b><i>Product Already has an Image</i></b></p>
                            <% for(file of files){ %>
                                <div class="text-center">
                                    <img src="http://localhost:8000/image/<%= file.filename %>"  alt="" style="width:240px; height: 170px; border-radius:10px;">
                                </div>
                            <%}%>
                            <%}%>
                    </div>
                </div>
            </div>
            <a href="/dashboard/product_list" class="btn btn-dark mt-4">Back</a>
        </div>
    </div>
</div>

